<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient tabaka (başlangıçta görünen) -->
    <item android:id="@+id/gradientBackground">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#A7C5EB"
                android:endColor="#FCEFEF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Yeşil geçiş tabakası (başlangıçta şeffaf) -->
    <item android:id="@+id/greenOverlay">
        <shape>
            <solid android:color="#00FF00" />
            <corners android:radius="16dp" />
        </shape>
        <!-- Başlangıçta tamamen şeffaf olması için -->
        <alpha android:alpha="0" />
    </item>
</layer-list>
