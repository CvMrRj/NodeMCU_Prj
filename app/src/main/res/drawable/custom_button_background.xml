<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1E90FF"/> <!-- Active (Mavi) -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#333333"/> <!-- Normal (Gri) -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
